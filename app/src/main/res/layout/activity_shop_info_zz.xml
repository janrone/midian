<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F5F5"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_title_bg"
        app:navigationIcon="@mipmap/ic_back">

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:text="资质信息"
            android:textColor="@color/color_white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:padding="10dp"
            android:text="跳过"
            android:textColor="@color/color_white"
            android:textSize="14sp"
            android:visibility="gone" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:visibility="gone"
                android:background="@color/color_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">


                <TextView
                    android:paddingBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店铺照片"
                    android:textColor="#4a4a4a"
                    android:textSize="16sp" />

                <LinearLayout
                    android:weightSum="2"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_weight="1"
                        android:paddingRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:background="@mipmap/ic_cam_bg"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="门面照"
                            android:textColor="#4a4a4a"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:background="@mipmap/ic_cam_bg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="店内照"
                            android:textColor="#4a4a4a"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*拍摄门面及招牌完整清晰，店内照能完整展示店内场景。"
                    android:textColor="#9B9B9B"
                    android:textSize="10dp" />


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:background="@color/color_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">


                <TextView
                    android:paddingBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营业执照"
                    android:textColor="#4a4a4a"
                    android:textSize="16sp" />

                <LinearLayout
                    android:weightSum="2"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_weight="1"
                        android:paddingRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:background="@mipmap/ic_cam_bg"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="门面照"
                            android:textColor="#4a4a4a"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="invisible"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:background="@mipmap/ic_cam_bg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="店内照"
                            android:textColor="#4a4a4a"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*需拍摄边框完整，证件文字清晰，能看见国徽。"
                    android:textColor="#9B9B9B"
                    android:textSize="10dp" />

                <RelativeLayout
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white">

                    <TextView
                        android:id="@+id/tv_reg_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="注册号"
                        android:textColor="#4A4A4A"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_toRightOf="@+id/tv_reg_code"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:textColorHint="#9b9b9b"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="必填，社会统一信用代码或注册号"
                        android:inputType="number"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#F4F5F9" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/color_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">


                <TextView
                    android:paddingBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证照"
                    android:textColor="#4a4a4a"
                    android:textSize="16sp" />

                <LinearLayout
                    android:weightSum="2"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_weight="1"
                        android:paddingRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:background="@mipmap/ic_cam_bg"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="正面照"
                            android:textColor="#4a4a4a"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:background="@mipmap/ic_cam_bg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="反面照"
                            android:textColor="#4a4a4a"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*身份证需文字清晰"
                    android:textColor="#9B9B9B"
                    android:textSize="10dp" />

                <RelativeLayout
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white">

                    <TextView
                        android:id="@+id/tv_id_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="姓名         "
                        android:textColor="#4A4A4A"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_toRightOf="@+id/tv_id_name"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:textColorHint="#9b9b9b"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="必填，请输入"
                        android:inputType="number"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white">

                    <TextView
                        android:id="@+id/tv_id_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="身份证号"
                        android:textColor="#4A4A4A"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_toRightOf="@+id/tv_id_code"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/et_id_code"
                        android:layout_width="match_parent"
                        android:textColorHint="#9b9b9b"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="必填，请输入"
                        android:inputType="number"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white">

                    <TextView
                        android:id="@+id/tv_id_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="有效期至"
                        android:textColor="#4A4A4A"
                        android:textSize="14sp" />

                    <RadioGroup
                        android:paddingRight="6dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/rg_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="固定期限"
                            android:textColor="#A5000000" />

                        <RadioButton
                            android:id="@+id/radio1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="长期有效"
                            android:textColor="#A5000000" />
                    </RadioGroup>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_to_date"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white">

                    <TextView
                        android:id="@+id/tv_id_to_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="有效期至"
                        android:textColor="#4A4A4A"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_toRightOf="@+id/tv_id_to_date"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/et_id_to_date"
                        android:layout_width="match_parent"
                        android:textColorHint="#9b9b9b"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="必填，请输入"
                        android:inputType="number"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp" />


                    <ImageView
                        android:id="@+id/iv_a1"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:padding="8dp"
                        android:src="@mipmap/ic_zz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>


            <TextView
                style="@style/dmBtn"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@drawable/shape_btn_submit"
                android:text="提交"
                android:textColor="@color/color_white"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>