<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.domilife.shop.com.domilife.shop.MainActivity">

   <LinearLayout
       android:orientation="vertical"
       android:id="@+id/fl_container"
       android:layout_width="match_parent"
       android:layout_height="match_parent" />



    <com.flyco.tablayout.CommonTabLayout
        app:layout_constraintBottom_toBottomOf="@+id/fl_container"

        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        app:tl_divider_color="@color/color_black"
        app:tl_iconHeight="22dp"
        app:tl_iconWidth="22dp"
        app:tl_indicator_color="@color/colorPrimary"
        app:tl_indicator_height="0dp"
        app:tl_textSelectColor="@color/color_yellow"
        app:tl_textUnselectColor="@color/color_gray"
        app:tl_textsize="12sp"
        app:tl_underline_color="#DDDDDD"
        app:tl_underline_height="1dp" />

</android.support.constraint.ConstraintLayout>
